<%= render(:partial => 'shared/header', :locals => {
  :location => 'top',
  :runnable => false,
  :function => 'Create',
  :authorable_object => @data_filter,
  :all_viewable_objects => @all_viewable_data_filters, 
  :all_editable_objects => @all_editable_data_filters }) %>

<div class="pageEdit">
<% form_for(:data_filter, :url => data_filters_path, :html => { :method => :post }) do |f| %>
  <div class="top">
    <div class='editbox'>
      <%= submit_tag "Create" %>
    </div>
    <div class='flashbox'>
      <span id='draft-message' class='flash'> <%= flash[:notice] %></span>
    </div>
  </div>
  <%= render :partial => 'form', :object => f %>
  <div class="bottom">
    <div class='editbox'>
      <%= submit_tag "Create" %>
    </div>
    <div class='flashbox'>
      <span id='draft-message' class='flash'> <%= flash[:notice] %></span>
    </div>
  </div>
<% end %>
</div>

<%= render(:partial => 'shared/header', :locals => {
  :location => 'bottom',
  :runnable => false,
  :function => 'Create',
  :authorable_object => @data_filter,
  :all_viewable_objects => @all_viewable_data_filters, 
  :all_editable_objects => @all_editable_data_filters }) %>
