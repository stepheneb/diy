<%= render(:partial => 'shared/header', :locals => {
  :location => 'top',
  :runnable => nil,
  :function => 'Create',
  :authorable_object => @external_otrunk_activity,
  :authorable_object_class => ExternalOtrunkActivity, 
  :all_viewable_objects => @all_viewable_external_otrunk_activities, 
  :all_editable_objects => @all_editable_external_otrunk_activities }) %> 

<div class="pageEdit">
<% form_for(:external_otrunk_activity, :url => external_otrunk_activities_path, :html => { :method => :post }) do |f| %>
  <div class="top">
    <div class='editbox'>
      <%= submit_tag 'Create' %> <%= submit_tag 'Create and keep editing' %>
    </div>
    <div class='flashbox'>
      <span id='draft-message' class='flash'> <%= flash[:notice] %></span>
    </div>
  </div>
  <%= render :partial => 'form', :object => f %>
  <div class="bottom">
    <div class='editbox'>
      <%= submit_tag 'Create' %> <%= submit_tag 'Create and keep editing' %>
    </div>
    <div class='flashbox'>
      <span id='draft-message' class='flash'> <%= flash[:notice] %></span>
    </div>
  </div>
<% end %>
</div>

<%= render(:partial => 'shared/header', :locals => {
  :location => 'bottom',
  :runnable => nil,
  :function => 'Create',
  :authorable_object => @external_otrunk_activity,
  :authorable_object_class => ExternalOtrunkActivity, 
  :all_viewable_objects => @all_viewable_external_otrunk_activities, 
  :all_editable_objects => @all_editable_external_otrunk_activities }) %> 
