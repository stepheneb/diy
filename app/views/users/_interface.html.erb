<p>
  <span class="SectionTitle">Select the probeware interface you will be using:</span>
</p>
<p>
  <span class="SectionTitle">Interface: </span>
  <%= interface.select(:vendor_interface_id,  VendorInterface.find(:all).map { |i| [i.name, i.id] } )%>
</p>

<br />

<%= observe_field 'user_vendor_interface_id', 
  :update => 'interface_description',
  :before => "Element.show('spinner')", 
  :complete => "Element.hide('spinner')",
  :with => "'vendor_interface=' + escape(value)",
  :url => { :action => "vendor_interface"},
  :method => :get %>

<p>
  <div id='interface_description'>
    <%= render(:partial => "vendor_interface", :object => @user.vendor_interface) %>
  </div>
</p>
