<h1>Editing unit</h1>

<%= error_messages_for :unit %>

<% form_for(@unit) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Notes</b><br />
    <%= f.text_area :notes %>
  </p>

  <p>
    <b>Created on</b><br />
    <%= f.date_select :created_on %>
  </p>

  <p>
    <b>Updated on</b><br />
    <%= f.date_select :updated_on %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @unit %> |
<%= link_to 'Back', units_path %>