<%= render(:partial => 'shared/header', :locals => {
  :location => 'top',
  :runnable => false,
  :function => 'Show',
  :authorable_object => @physical_unit,
  :all_viewable_objects => @all_viewable_physical_units, 
  :all_editable_objects => @all_editable_physical_units }) %>

<div class="pageEdit">
<% form_for(:physical_unit, :url => physical_unit_path, :html => { :method => :put }) do |f| %>
  <div class="top">
    <div class='editbox'>
      <%= submit_tag "Save" %>
    </div>
    <div class='flashbox'>
      <span id='draft-message' class='flash'> <%= flash[:notice] %></span>
    </div>
  </div>
  <%= render :partial => 'form', :object => f %>
<% end %>
</div>
