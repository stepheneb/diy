<% if current_user.activities.length > 0 %>
  <label>Edit: </label>
  <select onchange="window.location = this.value">
    <%= options_for_select @all_editable_activities.collect {|a| ["#{a.id}: #{truncate(a.name, 40)}", url_for(:controller => '/activities', :action => 'edit', :id => a.id)] }.unshift(['Select activity:', url_for(:controller => '/activities', :action => "index", :page => session[:page] || 1 )]) %>
  </select>
<% end %>
