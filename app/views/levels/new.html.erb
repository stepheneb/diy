<h1>New level</h1>

<%= error_messages_for :level %>

<% form_for(@level) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Created on</b><br />
    <%= f.date_select :created_on %>
  </p>

  <p>
    <b>Updated on</b><br />
    <%= f.date_select :updated_on %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', levels_path %>